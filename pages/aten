    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            padding: 20px;
            background: #fff;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        img {
            width: 150px;
            display: block;
            margin: 0 auto 20px;
        }

        h1 {
            text-align: center;
            font-size: 24px;
        }

        .filtro-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }

        .filtro-select,
        .filtro-input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .botao-buscar {
            margin-top: 10px;
            background-color: #2b3cc4;
            color: #fff;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
        }

        .card-title {
            font-weight: 600;
            font-size: 18px;
        }

        .card-address {
            margin: 5px 0;
        }

        .card-service {
            color: #000;
        }

        .card-hours {
            font-size: 14px;
            color: #666;
        }

        .card-link {
            color: #2b3cc4;
            font-weight: 600;
            text-decoration: none;
            float: right;
        }

        .no-results {
            margin-top: 20px;
            color: #666;
            font-style: italic;
        }
